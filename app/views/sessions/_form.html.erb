<div class="container-fluid">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 user-form">

      <%= content_tag :h1, header %>

      <%= render "shared/flash_messages" %>

      <%= render "shared/oauth_buttons" %>

      <%= simple_form_for :session, url: login_path, method: :post,
        defaults: { required: false }, wrapper: :vertical_form do |f| %>

        <%= f.input :email %>

        <%= f.input :password, label: "Пароль" %>

        <%= f.input :remember, as: :boolean, label: "Запомнить меня", wrapper: :vertical_boolean %>

        <%= f.submit "Войти", class: "btn btn-lg btn-success" %>

      <% end %>

    </div>
  </div>
</div>
